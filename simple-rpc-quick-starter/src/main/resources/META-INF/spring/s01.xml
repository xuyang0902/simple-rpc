<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:simple="http://www.simple.com/schema/simple"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.simple.com/schema/simple
       http://www.simple.com/schema/simple.xsd"
>

    <context:component-scan base-package="com.simple.quick.starter.spring"/>

    <!--框架的配置 应用名称 通信端口 注册中心地址-->
    <simple:boot/>
    <simple:node application="quick-start-01" port="8889" />
    <simple:register address="192.168.1.110:2181" protocol="zookeeper"/>


    <!--服务提供者-->
    <simple:service interface="com.simple.quick.starter.spring.App2" ref="app2Impl" version="2.0"/>

</beans>