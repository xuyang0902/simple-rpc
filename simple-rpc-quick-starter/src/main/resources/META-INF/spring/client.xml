<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
>

   <!-- <context:component-scan base-package="com.simple"/>-->

    <!--配置注册中心-->
    <bean id="registerConfig" class="com.simple.register.RegisterConfig">
        <property name="address" value="192.168.1.110"/>
        <property name="protocol" value="zookeeper"/>
    </bean>

    <!--rpc服务端通信端口-->
    <bean id="nodeConfig" class="com.simple.commons.model.NodeConfig">
        <property name="application" value="test-client"/>
        <property name="port" value="7778"/>
    </bean>

    <bean class="com.simple.core.BootManager">
        <property name="nodeConfig" ref="nodeConfig"/>
        <property name="registerConfig" ref="registerConfig"/>

        <!--注册服务-->
        <property name="referBeans">
            <list>

                <!--回到注册中心取远程提供者服务器信息-->
                <bean class="com.simple.core.client.ReferBean">
                    <property name="serviceName" value="com.simple.quick.starter.normal.App"/>
                    <property name="version" value="1.0"/>
                </bean>
            </list>
        </property>

    </bean>
</beans>